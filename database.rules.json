{
  "rules": {
    "auctions": {
      "$auctionId": {
        ".read": true,
        ".write": "auth != null",
        "currentBid": {
          ".validate": "newData.isNumber() && newData.val() > data.val()"
        },
        "currentBidder": {
          ".validate": "newData.isString()"
        },
        "viewers": {
          ".read": true,
          ".write": true
        }
      }
    },
    "items": {
      ".read": true,
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    },
    "admins": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    }
  }
}
